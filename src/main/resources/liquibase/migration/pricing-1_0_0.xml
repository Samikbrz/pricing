<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
                   logicalFilePath="pricing-1_0_0.xml">
    <changeSet id="create_product_table" author="sami">
        <createTable schemaName="${schema}" tableName="product">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(1024)"/>
            <column name="price" type="decimal"/>
        </createTable>
    </changeSet>
    <changeSet id="create_basket_table" author="sami">
        <createTable schemaName="${schema}" tableName="basket">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="product_id" type="bigint"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="basket" baseColumnNames="product_id" constraintName="fk_product_basket_rl" referencedTableName="product"
                                 referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="add_column_product" author="sami">
       <addColumn tableName="product">
           <column name="discount_rate" type="decimal"/>
       </addColumn>
    </changeSet>
    <changeSet id="add_column_product_2" author="sami">
        <addColumn tableName="product">
            <column name="has_discount" type="tinyint"/>
        </addColumn>
    </changeSet>
    <changeSet id="add_column_product_3" author="sami">
        <addColumn tableName="product">
            <column name="discount_type" type="varchar(25)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>